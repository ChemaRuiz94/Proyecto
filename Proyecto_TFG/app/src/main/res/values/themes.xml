<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ptoyecto_TFG" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ptoyecto_TFG.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Ptoyecto_TFG.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Ptoyecto_TFG.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="def_backgrand" parent="Theme.Ptoyecto_TFG">
        <item name="android:background">@color/light_gray</item>
    </style>
    <style name="head_backgrand" parent="Theme.Ptoyecto_TFG">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="rv_backgrand" parent="Theme.Ptoyecto_TFG">
        <item name="android:background">@color/ultra_light_gray</item>
    </style>

    <style name="def_buttons" parent="Theme.Ptoyecto_TFG">
        <item name="android:backgroundTint">@color/dark_gray</item>
        <item name="android:textColor">@color/ultra_light_gray</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="flt_buttons" parent="Theme.Ptoyecto_TFG">
        <item name="android:backgroundTint">@color/medium_gray</item>
    </style>

    <style name="def_edit_text" parent="Theme.Ptoyecto_TFG">
        <item name="android:background">@color/ultra_light_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="modif_edit_text" parent="Theme.Ptoyecto_TFG">
        <item name="android:background">@color/ultra_light_gray</item>
        <item name="android:textSize">18dp</item>
        <item name="android:radius">8dp</item>
    </style>

    <style name="text_link" parent="Theme.Ptoyecto_TFG">
        <item name="android:textColor">@color/link_blue</item>
    </style>

    <style name="text_link_red" parent="Theme.Ptoyecto_TFG">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="text_link_white" parent="Theme.Ptoyecto_TFG">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_label_gray" parent="Theme.Ptoyecto_TFG">
        <item name="android:textColor">@color/dark_gray</item>
    </style>
    <style name="text_label_black" parent="Theme.Ptoyecto_TFG">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>